<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/icon_account"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/name_in_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=' "NAME" has sent you a friend request'
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="18dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISIT PROFILE"
        android:onClick="visitprofile"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCEPT"
            android:layout_marginRight="9dp"
            android:onClick="notificationpageaccept"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DECLINE"
            android:onClick="notificationpagereject"
            />

    </LinearLayout>

</LinearLayout>