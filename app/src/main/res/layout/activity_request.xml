<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:orientation="vertical"
    tools:context=".Request"
    android:padding="6dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/icon_account"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=' Rakshith has sent you a friend request'
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="18dp"/>


    <Button
        android:background="#2196F3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISIT PROFILE"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginStart="10dp"
        android:onClick="visitprofile"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">


        <Button
            android:background="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="ACCEPT"
            android:layout_marginStart="10dp"
            android:onClick="notificationpageaccept"

            />
        <Button
            android:background="#2196F3"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="DECLINE"
            android:onClick="notificationpagereject"
            />

    </LinearLayout>

</LinearLayout>